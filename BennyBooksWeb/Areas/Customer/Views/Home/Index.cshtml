@model IEnumerable<BennyBooks.Models.Product> // this model for the view will always be lowercase first letter

<div class="row pb-3">
    @foreach(var product in Model) // Shows each product on the homepage
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@product.Title</p>
                            <p class="card-title h5 text-primary">@product.Author</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
</div>
