@model Category // Since we are not returning a type we can instead use the controller

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <!--Class is already available which allows us to use all properties from our model using the "asp-for"-->
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <!--checks validation, no need for js to check-->
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <!--checks validation, no need for js to check-->
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:10rem">Create</button>

        <!--Directs user to the home page-->
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 10rem">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        // Uses partial view, use _ to indicated a partialview. Makes it so validation happens on Client side not server side(Controller)
        <partial name="_ValidationScriptsPartial" />
    }
}